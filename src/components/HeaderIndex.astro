---
import './../css/output.css'
import { getUserActivo } from "../components/Cookies/Cookies.astro";
import { db, Usuario, eq } from "astro:db";

const cookies = Astro.request.headers.get('cookie')
const userActivo = await getUserActivo(cookies)
const infoUser = (await db.select().from(Usuario).where(eq(Usuario.id, userActivo)))[0]
---

<div class="h-28 sm:h-16">
    <div class="h-16 bg-black flex flex-wrap justify-between">
        <div class="w-full sm:w-1/3 flex justify-center sm:justify-start h-16 p-1">
            <a href="./">
                <picture class="h-full">
                    <source srcset="https://hdnqb6gk9llq7dvl.public.blob.vercel-storage.com/logos/logoConLetrasSinFondo-Fp5xPeztQ0ZyMsAQmRk66VfchrfBzR.png 641w" media="(min-width: 640px)" />
                    <img class="h-full" src="https://hdnqb6gk9llq7dvl.public.blob.vercel-storage.com/logos/logoSinFondo-IL0en8B1ubqISn7QAGxVZE3jlASqSW.png" />
                </picture>
            </a>
        </div>
        <div class="h-12 sm:h-16 w-full sm:w-1/3 p-1 sm:p-3 bg-gray-300 sm:bg-transparent flex justify-end items-center">
            <a href="./perfil" class="h-full">
                <img class="h-full rounded-full sm:w-10 sm:h-10 bg-blue-300 border border-black" src={infoUser["imagenPerfil"]} alt="Foto del perfil del usuario">
            </a>
        </div>
    </div>
</div>