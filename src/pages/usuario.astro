---
import Layout from "../layouts/Layout.astro";
import Header from '../components/HeaderIndex.astro';
import './../css/output.css'
import { ViewTransitions } from 'astro:transitions';
---

<Layout>
    <Header/>
    <ViewTransitions/>
    <div class="md:flex h-96">
        <div class="h-20 md:h-96 w-full md:w-1/3 p-2 md:p-8 md:max-w-80 md:min-w-56">
            <div class="w-full h-full bg-[#ffeed3] rounded shadow-[#DBAC63] shadow-lg p-2">
                <h3>Menú</h3>
                <ul id="menu">
                    <li class="mt-2"><a class="hover:bg-[#DBAC63] hover:text-white p-1 rounded" id="datosPersonales" href="#">Datos personales</a></li>
                    <li class="mt-2"><a class="hover:bg-[#DBAC63] hover:text-white p-1 rounded" id="datosPerfil" href="#">Datos del perfil</a></li>
                    <li class="mt-2"><a class="hover:bg-[#DBAC63] hover:text-white p-1 rounded" id="musica" href="#">Tu música</a></li>
                    <li class="mt-2"><a class="hover:bg-[#DBAC63] hover:text-white p-1 rounded" id="autenticacion" href="#">Autenticación</a></li>
                    <li class="mt-2"><a class="hover:bg-[#DBAC63] hover:text-white p-1 rounded" id="cerrarSesion" href="#">Cerrar sesión</a></li>
                </ul>
            </div>
        </div>
        <div class="h-96 w-full p-2 md:p-8">
            <div id="contenido" class="w-full h-full bg-[#ffeed3] rounded shadow-[#DBAC63] shadow-lg p-2 ">
                <h3>Dependiendo de lo clickeado en el menú aparecerá una cosa u otra</h3>
                <h3 id="personalizado" class="transition-all">De forma predeterminada aparecerá los datos personales</h3>
            </div>
        </div>
    </div>
</Layout>

<script>
document.getElementById("menu").addEventListener("click", (e) => {
    e.preventDefault()

    switch(e.target.id) {
        case "datosPersonales": 
            document.getElementById("contenido").innerHTML = `
                <h3>Dependiendo de lo clickeado en el menú aparecerá una cosa u otra</h3>
                <h3 id="personalizado">Cambiando a datos personales...</h3>
            `; break;
        case "datosPerfil": 
            document.getElementById("contenido").innerHTML = `
                <h3>Dependiendo de lo clickeado en el menú aparecerá una cosa u otra</h3>
                <h3 id="personalizado">Cambiando a datos del perfil...</h3>
            `; break;
        case "musica": 
            document.getElementById("contenido").innerHTML = `
                <h3>Dependiendo de lo clickeado en el menú aparecerá una cosa u otra</h3>
                <h3 id="personalizado">Cambiando a la música del usuario...</h3>
            `; break;
        case "autenticacion": 
            document.getElementById("contenido").innerHTML = `
                <h3>Dependiendo de lo clickeado en el menú aparecerá una cosa u otra</h3>
                <h3 id="personalizado">Cambiando a la autenticacion...</h3>
            `; break;
        case "cerrarSesion": 
            document.getElementById("contenido").innerHTML = `
                <h3>Dependiendo de lo clickeado en el menú aparecerá una cosa u otra</h3>
                <h3 id="personalizado">Cerrando la sesión...</h3>
            `; break;
    }
})

</script>
