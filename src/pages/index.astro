---
import { estaLogueado } from '../components/Cookies/Cookies.astro';
const cookies = Astro.request.headers.get('cookie')

if(!estaLogueado(cookies))
    return Astro.redirect("./login")

import { ViewTransitions } from 'astro:transitions';
import Reproductor from '../components/Reproductor.astro';
import Header from '../components/HeaderIndex.astro';
import MainIndex from '../layouts/MainIndex.astro';
import Layout from '../layouts/Layout.astro';

import './../css/output.css'
---

<Layout>
    <Header/>
    <MainIndex/>
    <ViewTransitions/>
    <Reproductor/>
</Layout>