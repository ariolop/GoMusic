---
import { estaLogueado } from '../components/Cookies/Cookies.astro';
const cookies = Astro.request.headers.get('cookie')

if(!estaLogueado(cookies))
    return Astro.redirect("./login")

import './../css/output.css'
import Reproductor from '../components/Reproductor.astro';
import { ViewTransitions } from 'astro:transitions';
import Layout from '../layouts/Layout.astro';
import HeaderIndex from '../components/HeaderIndex.astro';
import MainAudio from '../layouts/MainAudio.astro'

---

<Layout>
    <ViewTransitions/>
    <HeaderIndex/>
    <MainAudio/>
    <Reproductor/>
</Layout>
